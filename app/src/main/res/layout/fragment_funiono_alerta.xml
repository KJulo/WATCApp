<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/funcionoAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Como funciono la alerta?"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"/>

    <RadioGroup
        android:id="@+id/ratingRadioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/funcionoAlerta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <RadioButton
            android:id="@+id/ExcelenteRadioBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excelete"
            />
        <RadioButton
            android:id="@+id/BuenaRadioBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buena"
            />
        <RadioButton
            android:id="@+id/NotanBuenaRadioBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tan Buena"
            />
        <RadioButton
            android:id="@+id/NofuncionoRadioBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No funciono"
            />
    </RadioGroup>
    <Button
        android:id="@+id/EnviarBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:backgroundTint="#26C6DA"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/ratingRadioGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="25dp"
        />

    <Button
        android:id="@+id/CancelarBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="#EC407A"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/ratingRadioGroup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>